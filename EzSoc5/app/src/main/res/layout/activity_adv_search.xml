<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alphanese.ezsoc5.AdvSearch"
    android:background="@drawable/background4">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Room:"
        android:id="@+id/SelectRoom"

        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:textStyle="normal|bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/DaySelction" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Select Timings from:"
        android:id="@+id/SelectTimings"
        android:layout_below="@+id/SelectRoom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="103dp"
        android:textColor="@color/abc_primary_text_material_light"
        android:textStyle="normal|bold"
        android:layout_alignRight="@+id/MonthSelectiontText"
        android:layout_alignEnd="@+id/MonthSelectiontText" />

    <Spinner
        android:id="@+id/DaySelction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/DaySelectionText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"></Spinner>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Day:"
        android:id="@+id/DaySelectionText"

        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/SelectRoom"
        android:layout_toEndOf="@+id/SelectRoom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Month:"
        android:id="@+id/MonthSelectiontText"
        android:layout_below="@+id/DaySelction"
        android:layout_alignRight="@+id/DaySelectionText"
        android:layout_alignEnd="@+id/DaySelectionText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search!"
        android:id="@+id/SearchButton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/SelectTimings"
        android:layout_toEndOf="@+id/SelectTimings" />

    <Spinner
        android:id="@+id/roomSelection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/SelectRoom"
        android:layout_toRightOf="@+id/SelectTimings"
        android:layout_alignRight="@+id/TimeSelection1"
        android:layout_alignEnd="@+id/TimeSelection1" />

    <Spinner
        android:id="@+id/TimeSelection1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/SelectTimings"
        android:layout_toRightOf="@+id/SelectTimings"
        android:layout_alignRight="@+id/DaySelction"
        android:layout_alignEnd="@+id/DaySelction" />

    <Spinner
        android:id="@+id/TimeSelection2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TimeSelection1"
        android:layout_alignLeft="@+id/TimeSelection1"
        android:layout_alignStart="@+id/TimeSelection1"
        android:layout_alignRight="@+id/TimeSelection1"
        android:layout_alignEnd="@+id/TimeSelection1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date:"
        android:id="@+id/textView3"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="to"
        android:id="@+id/textView5"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_below="@+id/TimeSelection1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/SearchButton"
        android:layout_toStartOf="@+id/SearchButton"
        android:layout_alignBottom="@+id/TimeSelection2" />

    <Spinner
        android:id="@+id/MonthSelection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/roomSelection"
        android:layout_alignLeft="@+id/DaySelction"
        android:layout_alignStart="@+id/DaySelction"
        android:layout_alignRight="@+id/DaySelction"
        android:layout_alignEnd="@+id/DaySelction" />

</RelativeLayout>
